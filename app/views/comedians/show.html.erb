<p id="notice"><%= flash[:notice_login] %></p>

<link href="http://fontawesome.io/assets/font-awesome/css/font-awesome.css" rel="stylesheet" media="screen">
<div class="container">
  <div class="row user-menu-container square">
    <div class="col-md-7 user-details">
      <div class="row coralbg white">
        <div class="col-md-6 no-pad">
          <%= image_tag @comedian.avatar.url(:medium), height: "220", width: "220" %>
        </div>
        <div class="col-md-6 no-pad">
          <div class="user-pad vert-flex-box center">
            <div class="horiz-flex-box flex-start">
              <h3 class="com-prof-name"><%= @comedian.name %></h3>
            </div>
            <div class="horiz-flex-box flex-start">
              <h4 class="white">
                <i class="fa fa-check-circle-o"></i>
                <%= @comedian.city %>
              </h4>
            </div>
            <div class="horiz-flex-box flex-start">
              <h4 class="white">
                <i class="fa fa-twitter"></i> <%= @comedian.twitter_handle %>
              </h4>
            </div>
            <% if current_comedian == @comedian %>
            <a href="<%= edit_comedian_path(@comedian) %>">
              <button type="button" class="btn btn-labeled btn-danger">
                <span class="btn-label">
                  <i class="fa fa-pencil"></i>
                </span>Edit Profile
              </button>
            </a>
              <% end %>
          </div>
        </div>
      </div>
      <div class="row overview">
        <div class="col-md-4 user-pad text-center">
          <h3>FOLLOWERS</h3>
          <h4>2,784</h4>
        </div>
        <div class="col-md-4 user-pad text-center">
          <h3>FOLLOWING</h3>
          <h4>456</h4>
        </div>
        <div class="col-md-4 user-pad text-center">
          <h3>RATING</h3>
          <div class="average-review-rating show-show horiz-flex-box center"
               data-score=<%= @average_review %>>
          </div>
          <span>
            <p class="profile-rating">Based on <%= @comedian.reviews.count %> reviews</p>
          </span>
        </div>
      </div>
    </div>
    <div class="col-md-1 user-menu-btns vert-button-container">
      <div class="btn-group-vertical square vert-button-container" id="responsive">
        <a href="#" class="btn btn-block btn-inverse com-prof-button active">
          <i class="fa fa-bell-o fa-3x"></i>
        </a>
        <a href="#" class="btn btn-inverse com-prof-button">
          <i class="fa fa-envelope-o fa-3x"></i>
        </a>
        <a href="#" class="btn btn-inverse com-prof-button">
          <i class="fa fa-laptop fa-3x"></i>
        </a>
        <a href="#" class="btn btn-inverse com-prof-button">
          <i class="fa fa-cloud-upload fa-3x"></i>
        </a>
      </div>
    </div>
    <div class="col-md-4 user-menu user-pad">
      <div class="user-menu-content active">
        <h3>
          Upcoming Shows
        </h3>
        <div class="vert-flex-box col-lg-8 space-around comedian-upcoming-shows">
          <% @shows.each do |show| %>
            <div class="horiz-flex-box flex-start">
              <div class="sm-icon vert-flex-box center">
                <i class="fa fa-hand-o-right"></i>
              </div>
              <span class="sm-text">
                <h3><%= link_to show.show_name, show %></h3>
                <ul>
                  <li><%= link_to show.venue, show %></li>
                  <li><%= link_to show.date, show %></li>
                </ul>
              </span>
            </div>
          <% end %>
        </div>
      </div>
      <div class="user-menu-content">
        <a class="twitter-timeline" href="https://twitter.com/<%= @twitter_handle[1,@twitter_handle.length] %>" height="350px" data-widget-id="724738053403713536" data-screen-name="<%= @twitter_handle[1, @twitter_handle.length] %>">Tweets by <%= @twitter_handle %></a>
        <script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src=p+"://platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script>
      </div>
      <div class="user-menu-content">
        <iframe src="http://www.youtube.com/embed/?listType=user_uploads&list=<%= @youtube %>" width="350" height="350"></iframe>
      </div>
      <div class="user-menu-content">
        <h2 class="text-center">
          Contact Info <br>
          & <br>
          Social Media
        </h2>
        <div class="share-links col-lg-8 col-centered">
          <div class="vert-flex-box center">
              <div class="horiz-flex-box flex-start">
                <span class="sm-text">
                  <%= @comedian.name %>
                </span>
              </div>
              <div class="horiz-flex-box flex-start">
                <span class="sm-icon">
                  <i class="fa fa-phone" aria-hidden="true"></i>
                </span>
                <span class="sm-text">
                  <%= @phone %>
                </span>
              </div>
              <div class="horiz-flex-box flex-start">
                <span class="sm-icon">
                  <i class="fa fa-envelope" aria-hidden="true"></i>
                </span>
                <span class="sm-text">
                  <%= @comedian.email %>
                </span>
              </div>
              <div class="horiz-flex-box flex-start">
                <span class="sm-icon">
                  <i class="fa fa-twitter" aria-hidden="true"></i>
                </span>
                <span class="sm-text">
                  <%= link_to @twitter_handle, @twitter_url %>
                </span>
              </div>
              <div class="horiz-flex-box flex-start">
                <span class="sm-icon">
                  <i class="fa fa-facebook-square" aria-hidden="true"></i>
                </span>
                <span class="sm-text">
                  <%= link_to @facebook, @facebook_url %>
                </span>
              </div>
              <div class="horiz-flex-box flex-start">
                <span class="sm-icon">
                  <i class="fa fa-youtube-square" aria-hidden="true"></i>
                </span>
                <span class="sm-text">
                  <%= link_to @youtube, @youtube_url %>
                </span>
              </div>
              <div class="horiz-flex-box flex-start">
                <span class="sm-icon">
                  <i class="fa fa-instagram" aria-hidden="true"></i>
                </span>
                <span class="sm-text">
                  <%= link_to @instagram, @instagram_url %>
                </span>
              </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- Reviews Code -->
<div class="reviews container">
  <div class="background-comedian-review-master vert-flex-box flex-start">
    <% if current_user %>
      <%= render "reviews/comedian_form"%>
    <% end %>
    <div class="col-md-10 col-centered vert-flex-box comment-container">
      <p id="notice"><%= flash[:notice_signin] %></p>
        <%= render 'comedians_reviews' %>
    </div>
  </div>
</div>
