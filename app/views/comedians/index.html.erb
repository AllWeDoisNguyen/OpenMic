<h1>Listing Comedians</h1>

<%= render 'bookings/index' %>

<h1> O R I G I N A L  D A T A</h1>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Avatar</th>
      <th>Name</th>
      <th>Username</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comedians.each do |comedian| %>
      <tr>
        <td><%= image_tag comedian.avatar.url(:thumb)%></td>
        <td><%= comedian.name %></td>
        <td><%= comedian.username %></td>
        <td><%= comedian.password %></td>
        <td><%= link_to 'Show', comedian %></td>
        <td><%= link_to 'Edit', edit_comedian_path(comedian) %></td>
        <td><%= link_to 'Destroy', comedian, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

