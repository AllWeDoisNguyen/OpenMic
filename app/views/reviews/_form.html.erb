<%= form_for([@comedian, @comedian.reviews.build]) do |f| %>
	<div class="field">
		<%= f.label :rating %><br>
		<%= f.number_field :rating, min:1, max:5  %>
	</div>	
	<div class="field">
	<%= f.label :comment %><br>
	<%= f.text_field :comment %>
	</div>
	<div class="actions">
	<%= f.submit %>
	</div>
<% end %>
