<p id="notice"><%= notice %></p>
<div class="banner-filler"></div>
<p>
  <strong>Name:</strong>
  <%= @show.show_name %>
</p>

<p>
  <strong>Venue:</strong>
  <%= link_to @show.venue, @show.venue_website %>
</p>

<p>
  <strong>Date:</strong>
  <%= @show.date %>
</p>

<p>
  <strong>Time:</strong>
  <%= @show.time %>
</p>

<p>
  <strong>Booked comedians:</strong>
  <% @show.bookings.each do |x| %>
    <%= link_to x.comedian.name, x.comedian %>
  <% end %>
</p>

<%= render 'bookings/form' %>

<%= link_to 'Edit', edit_show_path(@show) %> |
<%= link_to 'Back', root_path %>
