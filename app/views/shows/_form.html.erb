<%= form_for(@show) do |f| %>
  <% if @show.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@show.errors.count, "error") %> prohibited this show from being saved:</h2>

      <ul>
      <% @show.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :venue %><br>
    <%= f.text_field :venue %>
  </div>
  <div class="field">
    <%= f.label :venue_website %><br>
    <%= f.text_field :venue_website %>
  </div>
  <div class="field">
    <%= f.label :date %><br>
    <%= f.date_select :date %>
  </div>
  <div class="field">
    <%= f.label :time %><br>
    <%= f.time_select :time %>
  </div>
  <!--  bookings start here -->
  <% f.fields_for :bookings do |x| %>
    <div class="field">
      <%= x.label :comedian_Username %><br>
      <%= x.collection_select(:comedian_id, @comedians, :id, :username, :prompt => true, multiple: true) %>
    </div>
  <% end %>
  <!-- bookings end here -->
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
