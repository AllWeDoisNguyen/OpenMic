<div class="comedian-signup-master-container col-md-8 col-centered">
  <h1>Search Comedian Shows</h1>
  <br><br>
  <div class="comedian-signup-container">
    <div>
      <!-- first form col -->
      <div class="col-md-6">
        <!-- first form -->
        <%= form_tag '', :method => :get do %>
          <div class="horiz-flex-box">
            <div class="input-group col-md-9">
              <span class="input-group-addon", id="basic-addon1">
                <%= label_tag :name, "Comedian name" %>
              </span>
            <%= text_field_tag :name, nil, class: "form-control", 'aria-describedby':"basic-addon1" %>
            </div>
          <%= submit_tag 'Filter' %>
          <% end %>
        </div>
        <!-- end first form -->
        <br>
        <!-- second form -->
        <%= form_tag '', :method => :get do %>
          <div class="horiz-flex-box">
            <div class="input-group col-md-9">
              <span class="input-group-addon", id="basic-addon1">
                <%= label_tag :venue, "Venue" %>
              </span>
            <%= text_field_tag :venue, nil, class: "form-control", 'aria-describedby':"basic-addon1" %>
            </div>
          <%= submit_tag 'Filter' %>
          <% end %>
        </div>
        <!-- end second form -->
        <br>
        <!-- third form -->
        <%= form_tag '', :method => :get do %>
          <div class="horiz-flex-box">
            <div class="input-group col-md-9">
              <span class="input-group-addon", id="basic-addon1">
                <%= label_tag :show_name, "Show Name" %>
              </span>
            <%= text_field_tag :show_name, nil, class: "form-control", 'aria-describedby':"basic-addon1" %>
            </div>
          <%= submit_tag 'Filter' %>
          <% end %>
        </div>
        <!-- end third form -->
        <br>
      </div>
      <!-- end first form col -->
      <!-- begin second form col -->
      <div class="col-md-6">
        <!-- begin fourth form -->
        <%= form_tag '', :method => :get do %>
          <div class="horiz-flex-box">
            <div class="input-group col-md-9">
              <span class="input-group-addon", id="basic-addon1">
                <%= label_tag :date, "Search by date" %>
              </span>
            <%= date_field_tag :date, nil, class: "form-control", 'aria-describedby':"basic-addon1" %>
          </div>
          <%= submit_tag 'Filter' %>
          <% end %>
        </div>
        <!-- end fourth form -->
        <br>
        <!-- begin fifth form -->
        <%= form_tag '', :method => :get do %>
          <div class="horiz-flex-box">
            <div class="input-group col-md-9">
              <span class="input-group-addon", id="basic-addon1">
                <%= label_tag :time, "Search by time" %>
              </span>
              <%= time_field_tag :time, nil, class: "form-control", 'aria-describedby':"basic-addon1" %>
            </div>
          <%= submit_tag 'Filter' %>
          <% end %>
        </div>
        <!-- end fifth form -->
        <br>
      </div>
      <!-- end second form col -->
    </div>
  </div>
  <%= button_to "Start Over", root_path %>
</div>
<!-- Comedian Table starts here -->
<div class="container col-centered table-responsive" id="comedians-list-table-container">
  <table id="table-show" class="table table-hover">
    <tr class="custom">
      <h2>Search Results</h2>
    </tr>
    <thead>
    <tr class="warning">
      <th>Comedian</th>
      <th>Upcoming Show</th>
    </tr>
    </thead>
    <% @bookings.each do |b| %>
      <tbody>
        <tr>
          <td>
            <ul class="list-unstyled">
              <li class="centered-list-item"><%= image_tag b.comedian.avatar.url(:thumb)%></li>
              <li class="centered-list-item"><%= b.comedian.name %></li>
            </ul>
          </td>
          <td>
            <ul class="list-unstyled">
              <li>Event Name:<%= b.show.show_name %></li>
              <li>Show Venue:<%= b.show.venue %></li>
              <li>Show Date:<%= b.show.date %></li>
              <li>Show Time:<%= b.show.time %></li>
            </ul>
          </td>
        </tr>
      </tbody>
    <% end %>
  </table>
</div>
