
<div id="open_mic_block">

    <center>
  <img id = "logo_image" src="http://www.hamptonsaudiovisualrentals.com/microphone.jpg"
      alt="microphone_image" height = "225" width = "225">
    </center>

  <h1>Open Mic</h1>

  <div id = "sign_in_block">

    <%= form_tag sessions_path, method: :post do %>
      <p>
    	   <%= label_tag :username %>
    	    <%= text_field_tag :username %>
      </p>
      <p>
    	   <%= label_tag :password %>
    	    <%= password_field_tag :password %>
      </p>

      <p>
    	   <%= submit_tag 'Log in' %>
       </p>
       <% end %>
      <%= link_to 'Sign up as comedian', new_comedian_path %>
      <%= link_to 'Sign up as user', new_user_path %>
    </div>
</div>
